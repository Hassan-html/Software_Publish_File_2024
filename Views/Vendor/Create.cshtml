@model SialkotSweet.Models.Tbl_Vendor
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h3 class="text-center"><b>CREATE NEW VENDOR</b></h3>
    <p class="text-center"><b>@ViewBag.msg</b></p>
    @using (Html.BeginForm("Create", "Vendor", FormMethod.Post))
    {
        <div class="row">
            <div class="col-md-4">
                <a href="@Url.Action("Index","Vendor")" class="btn btn-primary mt-2">Vendor List</a>
                <a href="@Url.Action("Home","Home")" class="btn btn-dark mt-2">Home</a>
            </div>
            <div class="col-md-4">
                <label>Enter Vendor Code</label>
                @Html.TextBoxFor(x => x.VCode, new { @class = "form-control" })
                @Html.HiddenFor(x => x.Id)
                @Html.HiddenFor(x => x.Date)
                @Html.HiddenFor(x => x.Debit)
                @Html.HiddenFor(x => x.Credit)
                @Html.HiddenFor(x => x.Balance)
                <label>Enter Vendor Name</label>
                @Html.TextBoxFor(x => x.VendorName, new { @class = "form-control" })
                <label>Enter Company Name</label>
                @Html.TextBoxFor(x => x.FactoryName, new { @class = "form-control" })
                <label>Enter Mobile</label>
                @Html.TextBoxFor(x => x.Mobile, new { @class = "form-control" })
                <label>Enter Address</label>
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })

                <input type="submit" class="btn btn-success mt-2 form-control" value="Update" />
            </div>
            <div class="col-md-4"></div>
        </div>
    }
</div>

