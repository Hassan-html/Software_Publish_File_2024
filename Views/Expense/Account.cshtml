@model IEnumerable<SialkotSweet.Models.TblInOutAccount>
@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1><b>NEW ACCOUNT</b></h1>
    <p class="text-center" style="font-size:24px">@ViewBag.msg</p><br />
    @using (Html.BeginForm("AccountSave", "Expense"))
    {
        <div class="row">
            <div class="col-md-4">
                <input type="text" name="AccountName" class="form-control" placeholder="Enter Expense Account" />
            </div>
            <div class="col-md-2">
                <input type="submit" class="btn btn-primary form-control" value="Save Account" />
            </div>
            <div class="col-md-2">
                <a href="@Url.Action("Expense","Expense")" class="btn btn-danger form-control">New Ledger</a>
            </div>
        </div>
    }
    <div class="table mt-2">
        <table class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th>Account ID</th>
                    <th>Account Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td>@i.AccountCode</td>
                        <td>@i.AccountName</td>
                        <td><a href="@Url.Action("Delete","Expense",new {Id=i.Id })" class="btn btn-sm btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

